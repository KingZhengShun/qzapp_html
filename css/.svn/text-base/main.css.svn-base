.lang_bg {background:url(images/lang_bg.png) bottom left no-repeat; background-size:cover;}
.lang_box {position:absolute; left:0; top:50%; width:100%; -webkit-transform:translateY(-50%);-moz-transform: translateY(-50%);-ms-transform: translateY(-50%); -o-transform: translateY(-50%);transform: translateY(-50%);}
.lang_box h1 {color:#0d0d0d; font-weight: bold; margin-bottom:1.5em;}
.lang_box p {border:1px solid #dfdfdf; border-radius:0.5em; line-height:3em; margin:1em 4.5em; background:rgba(255,255,255,0.8); font-size:0.875em;}